{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": [
    "dist",
    "node_modules",
    "test",
    "web",
    "build"
  ]
}

